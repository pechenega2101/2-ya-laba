#include <iostream>
#include <string>
#include <ctime>

using namespace std;

class detal {
public:
    friend class control;
    detal(string& _name) {
        mass = 0;
        name = _name;
        id = rand() % 100;
    };
    ~detal() {
        cout << "\n>Destructed<\n";
    };
    void print() {
        cout << "\nName: " << name << "\nID: " << id << "\nmass: " << mass << endl;
    }
private:
    int id;
    string name;
    float mass;
};

class control {
public:
    void set_mass(detal& a, float _mass) {
        a.mass = _mass;
    }
};

int main()
{
    srand(time_t(NULL));
    string _name;
    float _mass;
    const int chis = 3;
    detal* arr[chis];
    int num;
    for (num = 1; num <= chis; num++)
    {
        cout << "\ninput name:";
        cin >> _name;
        detal chel(_name);
        chel.print();
        cout << "\ninput mass:";
        do {
            rewind(stdin);
        } while (!scanf_s("%f", &_mass) || _mass < 0);
        control yaoy;
        yaoy.set_mass(chel, _mass);
        chel.print();
    }
}
